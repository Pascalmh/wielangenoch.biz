{
  "extends": [
    "config:base",
    ":automergeMinor",
    ":semanticPrefixChore",
    ":rebaseStalePrs"
  ],
  "major": {
    "dependencyDashboardApproval": true
  },
  "platformAutomerge": true,
  "timezone": "Europe/Berlin",
  "packageRules": [
    {
      "groupName": "node",
      "extends": [
        ":combinePatchMinorReleases",
        ":separateMultipleMajorReleases"
      ],
      "major": {
        "enabled": true
      },
      "minor": {
        "enabled": true
      },
      "patch": {
        "enabled": true
      },
      "lockFileMaintenance": {
        "enabled": true
      },
      "matchPackageNames": ["node", "yarn"]
    },
    {
      "groupName": "nx-patch",
      "extends": [":automergePatch"],
      "major": {
        "enabled": false
      },
      "minor": {
        "enabled": false
      },
      "patch": {
        "enabled": true
      },
      "lockFileMaintenance": {
        "enabled": true
      },
      "matchPackageNames": [
        "@schematics/angular",
        "@types/jest",
        "@types/node",
        "@typescript-eslint/eslint-plugin",
        "@typescript-eslint/parser",
        "cypress",
        "eslint",
        "eslint-config-prettier",
        "jest",
        "jest-preset-angular",
        "ng-packagr",
        "postcss",
        "prettier",
        "rxjs",
        "ts-jest",
        "tslib",
        "typescript",
        "zone.js"
      ],
      "matchPackagePrefixes": [
        "@angular/",
        "@angular-devkit/",
        "@angular-eslint/",
        "@ngrx/",
        "postcss-"
      ]
    },
    {
      "groupName": "nx-pin-nrwl",
      "extends": [":pinVersions"],
      "major": {
        "enabled": false
      },
      "minor": {
        "enabled": false
      },
      "patch": {
        "enabled": false
      },
      "pin": {
        "automerge": true,
        "enabled": true
      },
      "lockFileMaintenance": {
        "automerge": true,
        "enabled": true
      },
      "excludePackageNames": ["@nrwl/workspace"],
      "matchPackagePrefixes": ["@nrwl/"]
    },
    {
      "groupName": "nx-migrate",
      "matchPackageNames": ["@nrwl/workspace"],
      "prCreation": "not-pending"
    },
    {
      "groupName": "packages-widen",
      "matchPaths": ["packages/**/package.json"],
      "rangeStrategy": "widen",
      "matchDepTypes": ["dependencies", "peerDependencies"]
    }
  ]
}
